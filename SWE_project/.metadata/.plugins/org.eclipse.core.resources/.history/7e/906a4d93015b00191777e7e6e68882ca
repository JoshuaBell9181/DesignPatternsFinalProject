package sweProject;

public class DetermineText implements Determine{

	@Override
	public String determineFormat(String content) {
		if(content.contains("<")) {
			content = content.substring(content.indexOf('<'),content.length());
			
			if(content.contains(">")) {
				content = content.substring(content.indexOf('>'),content.length());
				
				if(content.contains("<")) {
					content = content.substring(content.indexOf('<'),content.length());
					if(content.contains("/")) {
						content = content.substring(content.indexOf('<'),content.length());
						if(content.contains(">")) {
							content = content.substring(content.indexOf('<'),content.length());
							return "HTML";
						}
					}
					
				}
				
			}
		}
		
		return "TEXT";
	}

	
}
