package sweProject;

public class Facade {

	private SaveAccordingly  saveAccordingly = new SaveAccordingly();
	private Converter converter = new Converter();
	
	void autoSave(String fileName, String content){
		saveAccordingly.autoSave(fileName, content.substring(content.indexOf('>') + 1, content.length()));
	}
	
	void export(String fileName) {
		converter.convert(fileName);
	}
	
}
